{% extends 'base.html.twig' %}

{% block title %}CookieDescription index{% endblock %}

{% block body %}
    <h1>CookieDescription index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cookie_description in cookie_descriptions %}
            <tr>
                <td>{{ cookie_description.id }}</td>
                <td>{{ cookie_description.description }}</td>
                <td>
                    <a href="{{ path('app_cookie_description_show', {'id': cookie_description.id}) }}">show</a>
                    <a href="{{ path('app_cookie_description_edit', {'id': cookie_description.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cookie_description_new') }}">Create new</a>
{% endblock %}
